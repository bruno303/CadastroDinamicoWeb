@model ConfiguracaoBancoDadosViewModel

<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        </div>
        <div class="col-md-12">
            <form role="form" method="post" action="/Configuracao/SalvarConfiguracoes">
                @Html.AntiForgeryToken()
                <div class="form-group">
                    @Html.LabelFor(m => m.Servidor)
                    @Html.EditorFor(m => m.Servidor, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(m => m.Servidor, "", new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Database)
                    @Html.EditorFor(m => m.Database, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(m => m.Database, "", new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Usuario)
                    @Html.EditorFor(m => m.Usuario, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(m => m.Usuario, "", new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Senha)
                    @Html.EditorFor(m => m.Senha, new { htmlAttributes = new { @class = "form-control", type="password" } })
                    @Html.ValidationMessageFor(m => m.Senha, "", new { @class = "text-danger" })
                </div>
                <div class="checkbox" style="margin-bottom: 15px;">
                    @Html.CheckBoxFor(m => m.RegistrarLog)
                    @Html.LabelFor(m => m.RegistrarLog)
                    @Html.ValidationMessageFor(m => m.RegistrarLog)
                </div>
                <button type="submit" class="btn btn-primary">Salvar</button>
            </form>
        </div>
    </div>
</div>