@model List<UsuarioViewModel>

@section Stylesheets {
    <link rel="stylesheet" type="text/css" href="~/lib/datatables/datatables.min.css" />
}

<div class="row">
    <div class="col-md-12">
        <a role="button" class="btn btn-outline-secondary" href="/" title="Voltar"><i class="fas fa-hand-point-left"></i></a>
        <a class="btn btn-outline-primary padding-cima-baixo" role="button" href="/Usuario/Novo/" title="Novo">
            <i class="fas fa-plus"></i>
        </a>
        <br />
        <br />
        <div class="table-responsive table-striped">
            <table class="table padding-cima-baixo datatable">
                <thead>
                    <tr>
                        <th>
                            Nome
                        </th>
                        <th>
                            Login
                        </th>
                        <th>
                            Ações
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @item.Nome
                            </td>
                            <td>
                                @item.Login
                            </td>
                            <td>
                                <a href=@("/Usuario/Editar/" + item.IdUsuario.ToString()) role="button" class="btn btn-success btn-sm" title="Editar">
                                    <i class="fas fa-edit"></i>
                                </a>
                                <a href=@("/Usuario/Deletar/" + item.IdUsuario.ToString()) role="button" class="btn btn-danger btn-sm" title="Deletar">
                                    <i class="fas fa-trash-alt"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <script type="text/javascript" src="~/bundles/js/useDatatable.min.js"></script>
    <script>
        $(document).ready(() => {
            createDatatable('.datatable');
        });
    </script>
}