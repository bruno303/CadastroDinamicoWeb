@section StyleSheets {
    <style>
        h2 {
            padding-bottom: 10px;
        }
        #modalLoading .modal-content {
            align-items: center;
            background: black;
            border: none;
            opacity: 0.8;
            height: 100%;
        }

        .btn-block {
            margin-bottom: 5px;
        }
    </style>
}

<div class="container-fluid">
    <div class="row">
        <div class="col-md-4">
            <div class="form-group">
                <label>Banco de Dados</label>
                <select id="selDatabases" class="custom-select"></select>
            </div>
        </div>
        <div class="col-md-4">
            <div class="form-group">
                <label>Schema</label>
                <select id="selSchemas" class="custom-select"></select>
            </div>
        </div>
        <div class="col-md-4">
            <div class="form-group">
                <label>Tabela</label>
                <select id="selTabelas" class="custom-select"></select>
            </div>
        </div>
    </div>

    <hr />

    <div id="container-colunas">
        <div class="row">
            <div class="col-md-12 col-sm-12 col-lg-12" id="divColunas">
                <h2>Colunas</h2>
                <div class="table-responsive">
                    <table id="tblColunas" class="table table-sm table-hover table-striped">
                        <thead>
                            <tr>
                                <th>
                                    Nome
                                </th>
                                <th class="text-center">
                                    Exibir ?
                                </th>
                                <th class="text-center">
                                    Usar Filtro ?
                                </th>
                            </tr>
                        </thead>
                        <tbody></tbody>
                    </table>
                </div>
            </div>
        </div>

        <hr />

        <div class="row">
            <div class="col-md-12 col-sm-12 col-lg-12" id="divFk">
                <h2>Chaves Estrangeiras</h2>
                <div class="table-responsive">
                    <table id="tblChavesEstrangeiras" class="table table-sm table-hover table-striped">
                        <thead>
                            <tr>
                                <th>
                                    Coluna
                                </th>
                                <th>
                                    Referência
                                </th>
                                <th>
                                    Descrição da Tabela
                                </th>
                            </tr>
                        </thead>
                        <tbody></tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-3 col-sm-12 text-left">
            <button class="btn btn-success btn-block" onclick="gravar()" title="Gravar">
                <i class="fas fa-save icon-with-space"></i> Gravar
            </button>
        </div>
        <div class="col-md-4 col-sm-12 text-left">
            <button class="btn btn-outline-success btn-block" onclick="cadDinamico()">
                Cadastro Dinâmico
            </button>
        </div>
        <div class="col-md-5 col-sm-12 text-right">
            <button class="btn btn-outline-danger btn-block" onclick="limparConfiguracao()" title="Limpar Configuração">
                <i class="fas fa-times icon-with-space"></i> Limpar Configuração
            </button>
        </div>
    </div>

</div>


<a hidden id="showModalMessage" href="#modalMessage" role="button" class="btn" data-toggle="modal"></a> 

<div class="modal fade" id="modalMessage" role="dialog" aria-labelledby="modalMessageLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="modalMessageLabel">
                    Cadastro Dinâmico
                </h5> 
                <button type="button" class="close" data-dismiss="modal">
                    <span aria-hidden="true">×</span>
                </button>
            </div>
            <div class="modal-body" id="modalMessageText"></div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">
                    Ok
                </button>
            </div>
        </div>
    </div>
</div>

<div class="modal" id="modalLoading">
    <div class="modal-content">
        <div class="modal-body">
            <img src="~/images/loading.gif" />
        </div>
    </div>
</div>

@section Scripts{
    <script type="text/javascript" src="~/js/configuracaoIndex.min.js"></script>
}