@section StyleSheets {
    <style>
        h2 {
            padding-bottom: 10px;
        }
    </style>
}

<div class="container-fluid">
    <div class="row">
        <div class="col-md-4">
            <div class="form-group">
                <label>Banco de Dados</label>
                <select id="selDatabases" class="custom-select"></select>
            </div>
        </div>
        <div class="col-md-4">
            <div class="form-group">
                <label>Schema</label>
                <select id="selSchemas" class="custom-select"></select>
            </div>
        </div>
        <div class="col-md-4">
            <div class="form-group">
                <label>Tabela</label>
                <select id="selTabelas" class="custom-select"></select>
            </div>
        </div>
    </div>

    <hr />

    <div id="container-colunas">
        <div class="row">
            <div class="col-md-12 col-sm-12 col-lg-12" id="divColunas">
                <h2>Colunas</h2>
                <div class="table-responsive">
                    <table id="tblColunas" class="table table-sm table-hover table-striped">
                        <thead>
                            <tr>
                                <th>
                                    Nome
                                </th>
                                <th class="text-center">
                                    Exibir ?
                                </th>
                                <th class="text-center">
                                    Usar Filtro ?
                                </th>
                            </tr>
                        </thead>
                        <tbody></tbody>
                    </table>
                </div>
            </div>
        </div>

        <hr />

        <div class="row">
            <div class="col-md-12 col-sm-12 col-lg-12" id="divFk">
                <h2>Chaves Estrangeiras</h2>
                <div class="table-responsive">
                    <table id="tblChavesEstrangeiras" class="table table-sm table-hover table-striped">
                        <thead>
                            <tr>
                                <th>
                                    Coluna
                                </th>
                                <th>
                                    Referência
                                </th>
                                <th>
                                    Descrição da Tabela
                                </th>
                            </tr>
                        </thead>
                        <tbody></tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-8 text-left">
            <button class="btn btn-success btn-lg" onclick="gravar()">Gravar</button>
            <button class="btn btn-outline-success btn-lg" onclick="cadDinamico()">Cadastro Dinâmico</button>
        </div>
        <div class="col-md-4 text-right">
            <button class="btn btn-outline-danger btn-lg" onclick="limparConfiguracao()">Limpar Configuração</button>
        </div>
    </div>

</div>

@section Scripts{
    <script type="text/javascript" src="~/lib/jquery-blockUI/jquery.blockUI.min.js"></script>
    <environment include="Development">
        <script type="text/javascript" src="~/js/configuracaoIndex.js"></script>
    </environment>
    <environment exclude="Development">
        <script type="text/javascript" src="~/js/configuracaoIndex.min.js"></script>
    </environment>
}