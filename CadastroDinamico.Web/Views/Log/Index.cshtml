@model List<LogViewModel>

@section Stylesheets {
    <link rel="stylesheet" type="text/css" href="~/lib/datatables/datatables.min.css" />
}

<div class="row">
    <div class="col-md-12">
        <a role="button" class="btn btn-outline-secondary" href="/" title="Voltar"><i class="fas fa-hand-point-left"></i></a>
        <br />
        <br />
        <div class="table-responsive table-striped">
            <table class="table padding-cima-baixo datatable">
                <thead>
                    <tr>
                        <th>
                            ID Log
                        </th>
                        <th>
                            Banco de Dados
                        </th>
                        <th>
                            Esquema
                        </th>
                        <th>
                            Tabela
                        </th>
                        <th>
                            Método
                        </th>
                        <th>
                            Data/Hora
                        </th>
                        <th>
                            Usuário
                        </th>
                        <th>
                            Query
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @item.IdLog
                            </td>
                            <td>
                                @item.Database
                            </td>
                            <td>
                                @item.Schema
                            </td>
                            <td>
                                @item.Tabela
                            </td>
                            <td>
                                @item.Metodo
                            </td>
                            <td>
                                @item.DataHora
                            </td>
                            <td>
                                @item.Usuario
                            </td>
                            <td>
                                @item.Query
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <script type="text/javascript" src="~/bundles/js/useDatatable.min.js"></script>
    <script>
        $(document).ready(() => {
            createDatatable('.datatable', true);
        });
    </script>
}