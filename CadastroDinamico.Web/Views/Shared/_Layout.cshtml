@using Microsoft.AspNetCore.Http
@using CadastroDinamico.Web.Extension

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" href="~/images/icon.ico"/>

    <title>Cadastro Dinâmico</title>

    <link rel="stylesheet" href="~/bundles/css/site.min.css" type="text/css" />
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.6.3/css/all.css"
          integrity="sha384-UHRtZLI+pbxtHCWp1t77Bi1L4ZtiqrqD80Kn4Z8NTSRyMA2Fd33n5dQ8lWUE00s/"
          crossorigin="anonymous">

    @RenderSection("StyleSheets", required: false)
</head>
<body>
    <partial name="_NavBar">
    <partial name="_CookieConsentPartial" />

    <div class="container-fluid body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; Cadastro Dinâmico - @DateTime.Now.Year.ToString() | @await this.RetornarHostnameServidor(Context.Session.GetInt32("idServidor").Value)  </p>
        </footer>
    </div>

    <script type="text/javascript" src="~/bundles/js/site.min.js"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
